@model CRUD_Operation_Using_DT_Modal_Ajax.Models.Department
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPeople.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <button type="button" class="btn btn-primary mt-1" data-toggle="modal" data-target="#myModal" onclick="HideKey()">Add Department</button><br /><br />
            <table class="table table-bordered">
                <tr class="text-center">
                    <th>Id</th>
                    <th>Department</th>
                    <th>DCode</th>
                </tr>
                <tbody class="tbody"></tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title m-1 float-right text-info" id="myModalLabel"></h4>
                <button type="button" class="close text-danger float-left" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label asp-for="Id"></label>
                        <input asp-for="Id"  class="form-control" disabled/>
                    </div>
                    <div class="form-group">
                        <label asp-for="DepartName"></label>
                        <input asp-for="DepartName" id="DepartName" class="form-control" />
                        <span class="field-validation-valid text-danger" asp-validation-for="DepartName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DCode"></label>
                        <input asp-for="DCode" id="DCode" class="form-control"/>
                        <span class="field-validation-valid text-danger" asp-validation-for="DCode"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



